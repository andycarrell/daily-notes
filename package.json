{
  "name": "daily-notes",
  "version": "0.0.1",
  "author": "andycarrell",
  "description": "",
  "license": "ISC",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:andycarrell/daily-notes.git"
  },
  "scripts": {
    "build:js": "esbuild src/index.js --bundle --minify --loader:.js=jsx --outfile=dist/bundle.js",
    "build:css": "postcss src/styles/index.scss -o dist/index.css",
    "build": "npm run prime && npm run build:js && npm run build:css",
    "format": "prettier --write src/",
    "prime": "copyfiles public/* dist --up=1",
    "start": "npm run prime && concurrently \"npm run build:js -- --servedir=dist\" \"npm run build:css -- --watch\""
  },
  "dependencies": {
    "@heroicons/react": "1.0.5",
    "@tailwindcss/typography": "0.4.1",
    "@tiptap/extension-blockquote": "2.0.0-beta.24",
    "@tiptap/extension-bold": "2.0.0-beta.24",
    "@tiptap/extension-bullet-list": "2.0.0-beta.23",
    "@tiptap/extension-code": "2.0.0-beta.25",
    "@tiptap/extension-code-block": "2.0.0-beta.29",
    "@tiptap/extension-document": "2.0.0-beta.15",
    "@tiptap/extension-hard-break": "2.0.0-beta.30",
    "@tiptap/extension-heading": "2.0.0-beta.23",
    "@tiptap/extension-history": "2.0.0-beta.21",
    "@tiptap/extension-horizontal-rule": "2.0.0-beta.30",
    "@tiptap/extension-italic": "2.0.0-beta.24",
    "@tiptap/extension-link": "2.0.0-beta.28",
    "@tiptap/extension-list-item": "2.0.0-beta.19",
    "@tiptap/extension-ordered-list": "2.0.0-beta.24",
    "@tiptap/extension-paragraph": "2.0.0-beta.22",
    "@tiptap/extension-strike": "2.0.0-beta.26",
    "@tiptap/extension-task-item": "2.0.0-beta.28",
    "@tiptap/extension-task-list": "2.0.0-beta.23",
    "@tiptap/extension-text": "2.0.0-beta.15",
    "@tiptap/extension-typography": "2.0.0-beta.19",
    "@tiptap/extension-underline": "2.0.0-beta.21",
    "@tiptap/react": "2.0.0-beta.95",
    "autoprefixer": "10.4.2",
    "esbuild": "0.13.15",
    "localforage": "1.10.0",
    "nanoid": "3.2.0",
    "postcss": "8.3.11",
    "postcss-cli": "9.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.33.3",
    "tailwindcss": "2.2.19"
  },
  "devDependencies": {
    "concurrently": "7.0.0",
    "copyfiles": "2.4.1",
    "postcss-import": "14.0.2",
    "postcss-nested": "5.0.6",
    "postcss-scss": "4.0.2",
    "prettier": "2.5.1"
  }
}
