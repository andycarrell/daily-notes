{
  "name": "daily-notes",
  "version": "0.0.1",
  "author": "andycarrell",
  "description": "",
  "license": "ISC",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:andycarrell/daily-notes.git"
  },
  "scripts": {
    "build:js": "esbuild src/index.js --bundle --minify --loader:.js=jsx --outfile=dist/bundle.js",
    "build:css": "postcss src/index.css -o dist/index.css",
    "build": "npm run prime && npm run build:js && npm run build:css",
    "format": "prettier --write src/",
    "prime": "copyfiles public/* dist --up=1",
    "start": "npm run prime && concurrently \"npm run build:js -- --servedir=dist\" \"npm run build:css -- --watch\""
  },
  "dependencies": {
    "@heroicons/react": "1.0.4",
    "@tailwindcss/typography": "0.4.1",
    "@tiptap/extension-code": "2.0.0-beta.17",
    "@tiptap/extension-heading": "2.0.0-beta.16",
    "@tiptap/extension-link": "2.0.0-beta.21",
    "@tiptap/extension-task-item": "2.0.0-beta.19",
    "@tiptap/extension-task-list": "2.0.0-beta.17",
    "@tiptap/extension-typography": "2.0.0-beta.15",
    "@tiptap/react": "2.0.0-beta.79",
    "@tiptap/starter-kit": "2.0.0-beta.119",
    "autoprefixer": "10.3.7",
    "esbuild": "0.13.4",
    "postcss": "8.3.9",
    "postcss-cli": "9.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "2.2.16"
  },
  "devDependencies": {
    "concurrently": "6.3.0",
    "copyfiles": "2.4.1",
    "prettier": "2.4.1"
  }
}
